@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    string currentTheme = "light";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyNetwork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @if (HttpContextAccessor.HttpContext.Request.Cookies["theme"] == null || HttpContextAccessor.HttpContext.Request.Cookies["theme"] == "light")
    {
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        currentTheme = "light";
    }

    else
    {
        <link rel="stylesheet" href="~/css/darksite.css" asp-append-version="true" />
        currentTheme = "dark";
    }
    <link rel="stylesheet" href="~/MyNetwork.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
            <div class="container-fluid" style="border-bottom-style: solid; border-bottom-color: red; border-top-style: solid; border-top-color: red;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i>Home</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="border-left:solid red">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">My page</a>
                        </li>
                        <li class="nav-item" style="border-left:solid red">
                            <a class="nav-link text-dark">Language:</a>
                        </li>
                        <li class="nav-item">
                            <select style="margin-top: 0.4em; margin-right: 0.8em" onchange="form.submit();" name="region" id="languageSelector">
                                <option value="@("eng")">English</option>
                                <option value="@("ru")">Russian</option>
                            </select>
                        </li>
                        <li class="nav-item" style="border-left:solid red">
                            <a class="nav-link text-dark">Theme:</a>
                        </li>
                        <li class="nav-item" style="border-right:solid red">
                            <select style="margin-top: 0.4em; margin-right: 0.8em" onchange="changeTheme();" name="region" id="themeSelector">
                                <option value="@("light")">Light</option>
                                <option value="@("dark")">Dark</option>
                            </select>
                            <script>
                                document.getElementById('themeSelector').value = "@currentTheme";
                            </script>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
     <div id="lastDiv"></div>
    <script>
        $(document).ready(function () {
            $("#lastDiv").nextAll("center").remove();
            $("#lastDiv").nextAll("div").remove();
            setTimeout(function () {
                $("#lastDiv").nextAll("div").remove();
            }, 500);
            setTimeout(function () {
                $("#lastDiv").nextAll("div").remove();
            }, 1000);
            setTimeout(function () {
                $("#lastDiv").nextAll("div").remove();
            }, 3000);
        });
    </script>
    <script>
        function changeTheme() {
            $.ajax({
                url: "/Home/ChangeTheme",
                method: 'GET',
                data: {
                    theme: document.getElementById('themeSelector').value
                }
            });
            setTimeout(function () {
                location.reload();
            }, 700);
        }
    </script>
</body>
</html>
